generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Test {
  id  Int @id @default(autoincrement())
  summary String
  body  TestFormLevel[]
}

model TestFormLevel {
  id  Int @id @default(autoincrement())
  belongsToTest Test @relation(fields: [testId], references: [id])
  testId Int @unique

  lowTestForm TestFormLevel[] @relation("TestLevel")
  highTestForm TestFormLevel @relation("TestLevel",fields: [highTestFormId],references: [id])
  highTestFormId Int @unique

  statement String
  questions Question[]
}

model Question {
  id  Int @id @default(autoincrement())
  belongsToTestFormLevel TestFormLevel @relation(fields: [testFormLevelId], references: [id])
  testFormLevelId Int @unique
}