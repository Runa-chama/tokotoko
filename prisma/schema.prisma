// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Test {
  id          Int          @id @default(autoincrement())
  summary     String
  sections    Section[]
  submittions Submittion[]
  classes     Class[]
}

model Section {
  id          Int          @id @default(autoincrement())
  summary     String
  test        Test         @relation(fields: [testId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  testId      Int
  number      Int
  subSections SubSection[]
}

model SubSection {
  id        Int        @id @default(autoincrement())
  summary   String
  section   Section    @relation(fields: [sectionId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  sectionId Int
  number    Int
  questions Question[]
}

model Question {
  id           Int         @id @default(autoincrement())
  number       Int
  question     String
  answer       String
  SubSection   SubSection? @relation(fields: [subSectionId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  subSectionId Int?
}

model Student {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  pass       String
  classes    Class[]
  Submittion Submittion[]
}

model Teacher {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  pass    String
  classes Class[]
}

model Class {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  students Student[]
  teachers Teacher[]
  tests    Test[]
}

model Submittion {
  id        Int      @id @default(autoincrement())
  student   Student  @relation(fields: [studentId], references: [id])
  answers   Answer[]
  test      Test    @relation(fields: [testId], references: [id])
  testId    Int
  studentId Int
}

model Answer {
  id           Int         @id @default(autoincrement())
  point        Int
  text         String
  Submittion   Submittion? @relation(fields: [submittionId], references: [id])
  submittionId Int?
}
