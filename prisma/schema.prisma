// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Class {
  id    String    @id @unique @db.VarChar(6)
  name  String    
  users User[]
  tests Test[]
}

// role
// 0 -> teacher
// 1 -> student
model User {
  id          String       @id
  name        String
  email       String
  classes     Class[]
  submissions Submission[]
  role        Int
}

model Test {
  id          Int          @id @default(autoincrement())
  title       String
  summary     String
  sections    Section[]
  startDate   DateTime     @default(now())
  endDate     DateTime     @default(now())
  submissions Submission[]
  classes     Class[]
}

model Section {
  id          Int          @id @default(autoincrement())
  testId      Int
  number      Int
  summary     String
  questions   Question[]
  test Test @relation(fields: [testId], references: [id], onUpdate: Cascade, onDelete: Cascade)
}

model Question {
  id            Int      @id @default(autoincrement())
  sectionId     Int
  number        Int
  question      String
  insertType    String
  insertContent String
  answer        String
  submissionAnswers Answer[]

  section Section @relation(fields: [sectionId], references: [id], onUpdate: Cascade, onDelete: Cascade)
}

model Submission {
  id             Int      @id @default(autoincrement())
  testId         Int
  studentId      String
  submissionDate DateTime @default(now())
  answers        Answer[]

  test Test @relation(fields: [testId], references: [id])
  user User @relation(fields: [studentId], references: [id])
}

model Answer {
  id           Int    @id @default(autoincrement())
  submissionId Int
  questionId   Int
  point        Int
  text         String

  submission Submission @relation(fields: [submissionId], references: [id])
  question   Question   @relation(fields: [questionId], references: [id])
}
